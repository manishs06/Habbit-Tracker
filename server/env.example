# ============================================
# SERVER ENVIRONMENT VARIABLES
# ============================================
# Copy this file to .env and fill in your values
# DO NOT commit .env to version control!

# --------------------------------------------
# Server Configuration
# --------------------------------------------
# Port number for the Express server
PORT=5000

# Environment mode: 'development' or 'production'
NODE_ENV=development

# --------------------------------------------
# MongoDB Database
# --------------------------------------------
# Local MongoDB (for development):
# MONGODB_URI=mongodb://localhost:27017/habitflow

# MongoDB Atlas (for production):
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/habitflow?retryWrites=true&w=majority

# MongoDB Atlas (for production):
# Example with actual credentials:
MONGODB_URI=mongodb+srv://excelmanager:Manishdb1@cluster0.mspp0ju.mongodb.net/habitflow?retryWrites=true&w=majority

# --------------------------------------------
# JWT Authentication
# --------------------------------------------
# Secret key for JWT token signing (use a strong random string)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production_min_32_characters

# JWT token expiration time (e.g., '7d', '24h', '1h')
JWT_EXPIRE=7d

# --------------------------------------------
# File Upload Configuration
# --------------------------------------------
# Maximum file size in bytes (default: 10MB = 10485760)
MAX_FILE_SIZE=10485760

# Local upload directory path (relative to server folder)
UPLOAD_PATH=./uploads

# --------------------------------------------
# CORS Configuration
# --------------------------------------------
# Frontend URL for CORS (development)
CLIENT_URL=http://localhost:5173

# Frontend URL for CORS (production - update after deploying frontend)
# CLIENT_URL=https://your-app.vercel.app

